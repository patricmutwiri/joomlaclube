<joomfish type="contentelement">
  <name>Conteúdos</name>
  <author>A. Kempkens</author>
  <version>2.0.3</version>
  <description>Definição para o componente padrão de conteúdos</description>
  <reference type="content">
  	<table name="content">
  		<field type="referenceid" name="id" translate="0">ID</field>
  		<field type="titletext" name="title"  length="50" maxlength="250" translate="1">Título</field>
  		<field type="text" name="title_alias"  length="50" maxlength="250" translate="0">Apelido do Título</field>
  		<field type="text" name="alias"  length="50" maxlength="250" translate="1" posthandler="filterTitle">Apelido</field>
  		<field type="htmltext" name="introtext" translate="1" ebuttons="readmore">Texto de Introdução</field>
  		<field type="htmltext" name="fulltext" translate="1" ebuttons="readmore">Texto completo</field>
  		<field type="textarea" name="images" rows="10" columns="80" translate="1">Imagens</field>
  		<field type="text" name="metakey" length="50" maxlength="250" translate="1">Metakey</field>
  		<field type="textarea" name="metadesc"  rows="5" columns="80" translate="1">Metadesc</field>
  		<field type="text" name="publish_up" translate="1">Inicio da publicação</field>
  		<field type="text" name="publish_down" translate="1">Fim da publicação</field>
  		<field type="created_date" name="created" translate="0">Criado em</field>
  		<field type="modified_date" name="modified" translate="0">Modificado em</field>
  		<field type="checked_out_by" name="checked_out" translate="0">Última modificação por</field>
  		<field type="checked_out_date" name="checked_out_time" translate="0">Última modificação em</field>
  		<field type="params" name="attribs" translate="1">Atributos</field>
  	</table>
  </reference>
  <translationfilters>
	  <frontpage>id</frontpage>
	  <section>sectionid</section>
  	  <category>catid</category>
  	  <author>created_by</author>
  	  <keyword>title</keyword>
  	  <published>published</published>
  	  <changed>created|modified</changed>
  	  <trash>state</trash>
  	  <archive>state</archive>
  	  <id>id</id>
  </translationfilters>
</joomfish>
